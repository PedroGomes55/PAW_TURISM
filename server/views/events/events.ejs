<!DOCTYPE html>
<html>

<head>
    <title>TURISMO ESTG</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/events.css">
    <link rel="icon" href="/images/imagesUtils//logo-turismo-estg.png" type="image/x-icon" />
</head>

<body>

    <!----------------NAVBAR------------------>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/heritage">TURISMO ESTG</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/heritage">Heritages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/users">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/promos">Promos</a>
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/users/profile"><img src="/images/imagesUtils/user.png" width="30px" height="30px"></a>
                      </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/shopping-cart"><i
                                class="bi bi-cart-fill"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="banner">
        <div class="container-card">
            <h1 id="title">Events List</h1>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col-card">
                    <div class="card">
                        <button type="button" class="disable">
                            <a href="/events/addEvent">
                                <img src="/images/imagesUtils/addEvent.png" class="card-img-top" width="500px" height="510px" />
                            </a>
                        </button>
                    </div>
                </div>

                <% for(var i=0; i< events.length;i++) { %>
                    <div class="col-card">
                        <div class="card">
                            <img src="/images/uploads/events/<%= events[i].eventImg %>" class="card-img-top"
                                width="450x" height="300px" />
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= events[i].name%>
                                </h5>
                                <p class="card-text">Date: <% var date=new Date(events[i].date); %>
                                        <%= date.getDate() %>/<%= date.getMonth() + 1 %>/<%= date.getFullYear() %>
                                                    <br>
                                                    Ticket Type: <%= events[i].typeTicket%>
                                                        <br>
                                                        Price: <%= events[i].price.toFixed(2).replace('.', ',' ) %>
                                                            &euro;
                                                            <br>
                                                            Total Tikets: <%= events[i].totalNumberTickets%>

                                </p>
                                <button type="button" class="btn btn-primary"><a href="/events/show/<%= events[i]._id %>" class="text-white"> Show </a></button>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>
</body>

</html>