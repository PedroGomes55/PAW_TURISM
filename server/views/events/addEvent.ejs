<!DOCTYPE html>
<html>

<head>
    <title>TURISMO ESTG</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/events.css">
    <link rel="icon" href="/images/imagesUtils//logo-turismo-estg.png" type="image/x-icon" />
</head>

<body>

    <!----------------NAVBAR------------------>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/heritage">TURISMO ESTG</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/heritage">Heritages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/users">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/promos">Promos</a>
                      </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/users/profile"><img src="/images/imagesUtils/user.png" width="30px" height="30px"></a>
                      </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/shopping-cart"><i class="bi bi-cart-fill"></i></a>
                      </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section id="banner">
        <div class="container" align="center">
            <div class="col">
                <h1 id="title">Add Event</h1>
                <form action="/events/addEvent" method="post" enctype="multipart/form-data">

                    <div class="input-field">
                        <input type="file" name="eventImg" required>
                        <p id="textImg" style="color: red">
                            <%= event.imgError %>
                        </p>
                    </div>

                    <div class="input-field">
                        <select name="heritageDestiny" class="form-select form-select-lg"
                            aria-label=".form-select-lg example">
                            <option value="">Possibles Heritages</option>
                            <option value="" disabled="disabled">───────────────</option>
                            <% for(var i=0; i< heritage.length;i++) { %>
                                <option value="<%= heritage[i].name%>">
                                    <%=heritage[i].name%>
                                </option>
                                <% } %>
                        </select>
                    </div>

                    <div class="input-field">
                        <input type="text" placeholder="Name" name="name" required>
                    </div>

                    <div class="input-field">
                        <input type="date" placeholder="date" name="date" required>
                    </div>

                    <div class="input-field">
                        <select name="typeTicket" list="ticketList" id="ticketInput" class="form-select form-select-lg"
                            aria-label=".form-select-lg example">
                            <option value="Infantil">Infantil</option>
                            <option value="Juvenil">Juvenil</option>
                            <option value="Adulto">Adulto</option>
                            <option value="Sénior">Sénior</option>
                        </select>
                    </div>

                    <div class="input-field">
                        <input type="number" placeholder="Price" name="price" min="0" step="0.01" required>
                    </div>

                    <div class="input-field">
                        <input type="number" placeholder="Total Tickets" name="totalNumberTickets" min="0" step="1"
                            required>
                    </div>

                    <div class="btn-field">
                        <button type="submit">Adicionar</button>
                        <button type="button" class="disable"><a href="/heritage">Back</a></button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>

</html>