    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/auth.css">
    <link rel="stylesheet" href="/stylesheets/errors.css">
    <link rel="icon" href="/images/imagesUtils//logo-turismo-estg.png" type="image/x-icon" />
</head>

<body>
    <!----------------NAVBAR------------------>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TURISMO ESTG</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/#banner">About us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/#footer">Suporte</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/auth">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <%- include ('../partials/partialErrors.ejs') %>

        <div class="container">
            <div class="form-box">
                <h1 id="title">Change Password</h1>
                <form action="/auth/forgetPw" method="post">

                    <div class="input-field">
                        <i class="bi bi-envelope-fill"></i>
                        <input type="email" placeholder="Email" name="email" required>
                    </div>

                    <div class="input-field">
                        <i class="bi bi-lock-fill"></i>
                        <input type="password" placeholder="New Password" name="password" required>
                    </div>

                    <div class="input-field">
                        <i class="bi bi-lock-fill"></i>
                        <input type="password" placeholder="Confirm New Password" name="password2" required>
                    </div>

                    <div class="btn-field">
                        <button type="submit">Confirm</button>
                        <button type="button" class="disable"><a href="/auth">Cancel</a></button>
                    </div>
                </form>
            </div>
        </div>

</body>

</html>